

			<div id="form-container">
					<form method="POST" action="{{ path('menu_admin_update', {"id":menu.getId()}) }}" enctype="multipart/form-data">
						<div class="form-group">
							<label>Menu Link Title:</label>
							<input class="form-control" id="menu_title" name="menu_title" type="text" value="{{ flash_data('title',menu.getTitle()) }}" />
							<span class="help-block">The text to be used for this link in the menu.</span>
							{{ flash_error('menu_title') }}
						</div>

						<div id="alias-box" class="form-group">
							<label>Path</label>
							<input class="form-control" type="text" name="menu_path" value="{{ flash_data('menu_path', menu.getPath()) }}">
							<span class="help-block">Custom url to the page: leave blank to use default</span>
							{{ flash_error('menu_path') }}
						</div>

						<div id="alias-box" class="form-group">
							<label>Custom Rout Name</label>
							<input class="form-control" type="text" name="route_name" value="{{ flash_data('route_name', menu.getRouteName()) }}">
							<span class="help-block">Custom route name</span>
							{{ flash_error('route_name') }}
						</div>	

						<div class="form-group">
							<label>Parent:</label>
							<select name="menu_parent_id" id="menu_parent_id" class="input-select">
								<option value="0"> -- Root -- </option>
								{{ parentOption|raw }}
							</select>
							<span class="help-block">The maximum depth for a link and all its children is fixed at 9. Some menu links may not be available as parents if selecting them would exceed this limit.</span>
						</div>

						<div class="checkbox custom-checkbox">
							<label>
								<input type="checkbox" id="menu_visibility" name="menu_visibility" {{ menu.isVisible() ? 'checked' }} />
								<span class="fa fa-check"></span>Display link on public page
							</label>
						</div>						

						<div class="checkbox custom-checkbox">
							<label>
								<input type="checkbox" id="extra_config" name="extra_config" {{ menu.hasExtraConfig() ? 'checked' }}/>
								<span class="fa fa-check"></span>Enable additional configuration
							</label>
						</div>	

						{% if menu.hasExtraConfig() %}

						<div id="alias-box" class="form-group">
							<label>Controller</label>
							<input class="form-control" type="text" name="controller_name" value="{{ flash_data('controller_name', menu.getController()) }}"
							<span class="desc">Custom controller name</span>
							{{ flash_error('controller_name') }}
						</div>

						<div id="alias-box" class="form-group">
							<label>Template</label>
							<input class="form-control" type="text" name="menu_page_template" value="{{ flash_data('menu_page_template', menu.getTemplate()) }}">
							<span class="desc">Template</span>
							{{ flash_error('menu_page_template') }}
						</div>						

						<div id="alias-box" class="form-group">
							<label>Content type</label>
							<input class="form-control" type="text" name="content_type" value="{{ flash_data('content_type', menu.getContentType() ) }}" > 
							<span class="desc">Content type</span>
							{{ flash_error('content_type') }}
						</div>	

						{% endif %}

						<button class="btn btn-green isThemeBtn" id="submit">submit</button>

					</form>
				</div>