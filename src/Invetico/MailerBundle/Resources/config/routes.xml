<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="mailbox_inbox" path="/mailbox/inbox">
        <default key="_controller">mailbox_controller:inboxAction</default>
    </route>

    <route id="mailbox_compose" path="/mailbox/compose">
        <default key="_controller">mailbox_controller:composeAction</default>
    </route>    
    <route id="check_contact" path="/contact/check">
        <default key="_controller">contact_controller:checkContactAction</default>
    </route>    

</routes>    