
		
		<form action="#" method="post">
	          
			  <table class="table" width="100%" cellpadding="0" cellspacing="0" id="data-list" >
	            <thead>
	              <tr>
	                <th width="34" scope="col"><input type="checkbox" name="check-all-boxes" id="check-all-boxes" /></th>
	                <th width="136" scope="col">Full Name</th>
	                <th width="102" scope="col">Username</th>
	                <th width="109" scope="col">Email</th>
	                <th width="109" scope="col">Address</th>
	                <th width="109" scope="col">Country</th>
	                <th width="40px" scope="col">Roles</th>
	                <th width="40px" scope="col">Action</th>
	              </tr>
	            </thead>
	            <tbody>
					{% for user in collection %}	
					<tr>
						<td width="34">
							<label>
								<input type="checkbox" class="check-box" name="checkbox" id="checkbox" value="{{ user.getId() }}"/>
							</label>
						</td>
						<td >{{ user.getFullName() }}</td>
						<td >{{ user.getUsername() }}</td>
						<td >{{ user.getEmail() }}</td>
						<td >{{ user.getAddress() }}</td>
						<td >{{ user.getCountry() }}</td>

						<td width="90"><a class="get_ajax" style="font-weight:bold" href="{{ path('admin_role_user', {"username":user.getUsername()}) }}">Change</a></td>
						<td width="40" style="text-align: right">
							<a class="btn btn-danger btn-content-delete btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" data-delete-target="{{ path('admin_user_delete', {"username":user.getUsername()}) }}"><span class="glyphicon glyphicon-trash"></span></a>
						</td>
					</tr>
					{% endfor %}
	            </tbody>
				<tfooter>
		            <tr class="footer"> 
		            </tr>				
				</tfooter>
	          </table>
		    	<div class="pagination">
		            {{ pagination|raw }}
		        </div>			  
	    </form>